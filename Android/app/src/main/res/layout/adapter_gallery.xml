<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="305dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/gallery1Layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/workImageView1"
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/nameTextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="アプリ名"
                android:textSize="14dp"
                android:textColor="@color/mainBlack"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textAlignment="center"
                android:gravity="top"
                android:lines="2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp">
                <TextView
                    android:id="@+id/engineerTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="エンジニア名"
                    android:textSize="10dp"
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/areaTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="東京都"
                    android:textSize="9dp"
                    android:textColor="@color/lightBlack"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/separatorGray"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
                <TextView
                    android:id="@+id/organizationTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="法人"
                    android:textSize="9dp"
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/cost"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/costTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000,000円"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_full_14_14"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/evaluateTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="12dp"
                    android:textColor="@color/mainBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/galleryButton1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/passiveGray"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/gallery2Layout"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/workImageView2"
                android:layout_width="90dp"
                android:layout_height="180dp"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/nameTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="アプリ名"
                android:textSize="14dp"
                android:textColor="@color/mainBlack"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textAlignment="center"
                android:gravity="top"
                android:lines="2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp">
                <TextView
                    android:id="@+id/engineerTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="エンジニア名"
                    android:textSize="10dp"
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/areaTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="東京都"
                    android:textSize="9dp"
                    android:textColor="@color/lightBlack"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/separatorGray"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
                <TextView
                    android:id="@+id/organizationTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="法人"
                    android:textSize="9dp"
                    android:textColor="@color/lightBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/cost"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/costTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000,000円"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_full_14_14"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/evaluateTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="12dp"
                    android:textColor="@color/mainBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/galleryButton2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/passiveGray"
            android:layout_gravity="bottom"/>
    </FrameLayout>



</LinearLayout>
