<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/workImageView"
            android:layout_width="80dp"
            android:layout_height="168dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="アプリ名"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/engineerDetailWorkName"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="OS"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
                <TextView
                    android:id="@+id/osTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="iOSiOSiOSiOSiOSiOSiOSiOSiOSiOSiOS"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="開発言語"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
                <TextView
                    android:id="@+id/languageTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="SwiftSwiftSwift"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="機能"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
                <TextView
                    android:id="@+id/functionTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="HTTP通信HTTP通信HTTP"
                    android:textSize="12dp"
                    android:textColor="@color/lightBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/cost"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/costTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="1,000,000円"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_marginLeft="2dp"/>
                <View
                    android:layout_width="16dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/star1FullImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_full_14_14"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/star1HalfImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_half_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/star1EmptyImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_empty_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/star2FullImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_full_14_14"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/star2HalfImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_half_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/star2EmptyImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_empty_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/star3FullImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_full_14_14"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/star3HalfImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_half_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/star3EmptyImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_empty_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/star4FullImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_full_14_14"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/star4HalfImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_half_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/star4EmptyImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_empty_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="1dp"/>
                <ImageView
                    android:id="@+id/star5FullImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_full_14_14"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/star5HalfImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_half_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/star5EmptyImageView"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_empty_14_14"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/passiveGray"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
</LinearLayout>
