<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/engineerImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WEBサービス研究所"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/mainBlack"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:id="@+id/areaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="東京都"
            android:textSize="12dp"
            android:textColor="@color/lightBlack"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/lightBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/organizationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法人"
            android:textSize="12dp"
            android:textColor="@color/lightBlack"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <ImageView
            android:id="@+id/star1FullImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_full_14_14"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/star1HalfImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_half_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star1EmptyImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_empty_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <View
            android:layout_width="4dp"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/star2FullImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_full_14_14"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/star2HalfImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_half_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star2EmptyImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_empty_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <View
            android:layout_width="4dp"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/star3FullImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_full_14_14"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/star3HalfImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_half_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star3EmptyImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_empty_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <View
            android:layout_width="4dp"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/star4FullImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_full_14_14"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/star4HalfImageView"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/star_half_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star4EmptyImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_empty_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <View
            android:layout_width="4dp"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/star5FullImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_full_14_14"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/star5HalfImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_half_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/star5EmptyImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_empty_14_14"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="評価:"
            android:textSize="12dp"
            android:textColor="@color/lightBlack"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/evaluateTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0.0"
            android:textSize="12dp"
            android:textColor="@color/lightBlack"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baloon"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自己紹介"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/lightBlack"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <TextView
        android:id="@+id/profileTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="8年間の開発経験があります"
        android:textSize="12dp"
        android:textColor="@color/mainBlack"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="実績"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/lightBlack"/>
        <TextView
            android:id="@+id/workCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(3件)"
            android:textSize="10dp"
            android:textColor="@color/mainBlack"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/passiveGray"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

</LinearLayout>
