<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gallerySortBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/closeButton1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:background="@layout/shape_gallery_sort_contents">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/evaluateSelectedImageView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sort_selected"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="評価が高い順"
                        android:textSize="16dp"
                        android:textColor="@color/mainBlack"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <Button
                    android:id="@+id/evaluateButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/passiveGray"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="64dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/costSelectedImageView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sort_selected"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="開発費が安い順"
                        android:textSize="16dp"
                        android:textColor="@color/mainBlack"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <Button
                    android:id="@+id/costButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"/>
            </FrameLayout>

        </LinearLayout>
        <Button
            android:id="@+id/closeButton2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#0000"/>
    </LinearLayout>

</FrameLayout>
